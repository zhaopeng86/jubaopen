            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="我的报名"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>


    <ListView
        android:id="@+id/listower"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>